@model UnipiForum.Areas.Admin.ViewModels.GroupsIndex

<h1>All Groups</h1>
@*Groups View for Admin*@

<table class="table table-striped">
    <thead>
        <tr>
            <th>Group ID</th>
            @*<th>Difficulty</th>*@
            <th>Users</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var grp in Model.Groups)
        {
        <tr>
            <td>@grp.group_id</td>
            @*<td>@Model.DifficultyValue.CompareTo(grp.diff_id) </td>*@

            <td>@string.Join(", ", grp.users.Select(users => users.username))</td>
            <td>
                <div class="btn-group">
                    <a href="@Url.Action("GTG",new {grp.group_id})" class="btn btn-xs btn-primary">
                        <i class="glyphicon glyphicon-edit"></i>
                        Go to this Group
                    </a>
                </div>
            </td>

        </tr>
        }
    </tbody>
</table>
